{
	"name": "cp-tools",
	"displayName": "CP-Tools",
	"description": "Some stuff to help with CP",
	"version": "0.0.1",
	"publisher": "plasmatic1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cp-tools.buildAndRun",
		"onView:buildAndRunOptions"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cp-tools.buildAndRun",
				"title": "Build and Run",
				"category": "CP Tools"
			},
			{
				"command": "cp-tools.editOption",
				"title": "Edit Option",
				"category": "CP Tools",
				"icon": "icons/edit-light.svg"
			},
			{
				"command": "cp-tools.resetOptions",
				"title": "Reset Options",
				"category": "CP Tools",
				"icon": "icons/refresh.svg"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "options",
					"title": "Options",
					"icon": "icons/settings.svg"
				}
			]
		},
		"views": {
			"options": [
				{
					"id": "buildAndRunOptions",
					"name": "Build and Run"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "cp-tools.editOption",
					"group": "inline",
					"when": "view == buildAndRunOptions"
				}
			],
			"view/title": [
				{
					"command": "cp-tools.resetOptions",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
