{
	"name": "cp-tools",
	"displayName": "CP-Tools",
	"description": "Some stuff to help with CP",
	"version": "2.0.0",
	"publisher": "plasmatic1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cp-tools.openInput",
		"onCommand:cp-tools.openOptions",
		"onCommand:cp-tools.resetDisplayHTML",
		"onCommand:cp-tools.removeTempFiles",
		"onCommand:cp-tools.buildAndRun",
		"onCommand:cp-tools.loadTemplates"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cp-tools.openInput",
				"title": "Open CP Tools Test Data Menu",
				"category": "CP Tools"
			},
			{
				"command": "cp-tools.openOptions",
				"title": "Open CP Tools Options Menu",
				"category": "CP Tools"
			},
			{
				"command": "cp-tools.resetDisplayHTML",
				"title": "Reset display HTML for all displays (I/O, Output, Options) for debugging.  (WIP/NONFUNCTIONAL)",
				"category": "CP Tools Debug"
			},
			{
				"command": "cp-tools.removeTempFiles",
				"title": "Remove all created temprary files.  (WIP/NONFUNCTIONAL)",
				"category": "CP Tools"
			},
			{
				"command": "cp-tools.buildAndRun",
				"title": "Build and Run Current Open File",
				"category": "CP Tools"
			},
			{
				"command": "cp-tools.loadTemplates",
				"title": "Load Templates",
				"category": "CP Tools"
			}
		],
		"keybindings": [
			{
				"command": "cp-tools.buildAndRun",
				"key": "ctrl+alt+b"
			}
		],
		"viewsContainers": {},
		"views": {},
		"menus": {}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"parcel:build": "parcel build -d out/assets src/assets/entrypoint/input.html src/assets/entrypoint/output.html src/assets/entrypoint/options.html --public-url \"vscodeRoot\"",
		"parcel:watch": "parcel watch -d out/assets src/assets/entrypoint/input.html src/assets/entrypoint/output.html src/assets/entrypoint/options.html --public-url \"vscodeRoot\" --no-hmr",
		"compile": "tsc -p ./ && npm run parcel:build",
		"watch": "tsc -watch -p ./ && npm run parcel:watch",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42",
		"@types/pidusage": "^2.0.1",
		"parcel-bundler": "^1.12.4",
		"sass": "^1.24.4",
		"vue-template-compiler": "^2.6.11"
	},
	"dependencies": {
		"@vue/component-compiler-utils": "^3.1.1",
		"lodash": "^4.17.15",
		"pidusage": "^2.0.17",
		"vue": "^2.6.11",
		"vue-hot-reload-api": "^2.3.4"
	}
}
