{
	"name": "cp-tools",
	"displayName": "CP-Tools",
	"description": "Some stuff to help with CP",
	"version": "0.0.1",
	"publisher": "plasmatic1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cp-tools.open",
		"onCommand:cp-tools.openTerminal",
		"onCommand:cp-tools.buildAndRun",
		"onCommand:cp-tools.resetDisplayHTML",
		"onCommand:cp-tools.loadTemplates"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cp-tools.open",
				"title": "Open CP Tools Menu",
				"category": "CP Tools"
			},
			{
				"command": "cp-tools.openTerminal",
				"title": "Open CP Tools Terminal",
				"category": "CP Tools"
			},
			{
				"command": "cp-tools.buildAndRun",
				"title": "Build and Run",
				"category": "CP Tools"
			},
			{
				"command": "cp-tools.resetDisplayHTML",
				"title": "Reset/Reload Display HTML",
				"category": "CP Tools"
			},
			{
				"command": "cp-tools.loadTemplates",
				"title": "Load Templates",
				"category": "CP Tools"
			}
		],
		"viewsContainers": {},
		"views": {},
		"menus": {}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"parcel:build": "parcel build -d out/assets src/assets/display.html --public-url \"vscodeRoot\"",
		"parcel:watch": "parcel watch -d out/assets src/assets/display.html --public-url \"vscodeRoot\" --no-hmr",
		"compile": "tsc -p ./ && npm run parcel:build",
		"watch": "tsc -watch -p ./ && npm run parcel:watch",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^13.1.6",
		"@types/pidusage": "^2.0.1",
		"parcel-bundler": "^1.12.4",
		"sass": "^1.24.4",
		"tslint": "^5.20.1",
		"typescript": "^3.7.4",
		"vue-template-compiler": "^2.6.11"
	},
	"dependencies": {
		"@types/vscode": "^1.41.0",
		"@vue/component-compiler-utils": "^3.1.1",
		"pidusage": "^2.0.17",
		"vscode-test": "^1.3.0",
		"vue": "^2.6.11",
		"vue-hot-reload-api": "^2.3.4"
	}
}
