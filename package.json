{
	"name": "cp-tools",
	"displayName": "CP-Tools",
	"description": "Some stuff to help with CP",
	"version": "0.0.1",
	"publisher": "plasmatic1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cp-tools.buildAndRun",
		"onCommand:cp-tools.openInputFile",
		"onCommand:cp-tools.editOption",
		"onCommand:cp-tools.resetCategory",
		"onCommand:cp-tools.resetOptions",
		"onCommand:cp-tools.cacheVue",
		"onCommand:cp-tools.uncacheVue",
		"onCommand:cp-tools.loadTemplates",
		"onView:options"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cp-tools.buildAndRun",
				"title": "Build and Run",
				"category": "CP Tools Build and Run"
			},
			{
				"command": "cp-tools.openInputFile",
				"title": "Open Input File",
				"category": "CP Tools Build and Run"
			},
			{
				"command": "cp-tools.editOption",
				"title": "Edit Option",
				"category": "CP Tools Config",
				"icon": "icons/edit-light.svg"
			},
			{
				"command": "cp-tools.resetCategory",
				"title": "Reset Category",
				"category": "CP Tools Config",
				"icon": "icons/refresh.svg"
			},
			{
				"command": "cp-tools.resetOptions",
				"title": "Reset Options",
				"category": "CP Tools Config",
				"icon": "icons/refresh.svg"
			},
			{
				"command": "cp-tools.cacheVue",
				"title": "Cache Vue.js",
				"category": "CP Tools Optimization"
			},
			{
				"command": "cp-tools.uncacheVue",
				"title": "Uncache Vue.js",
				"category": "CP Tools Optimization"
			},
			{
				"command": "cp-tools.loadTemplates",
				"title": "Load Templates",
				"category": "CP Tools Templates (WIP)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "options",
					"title": "Options",
					"icon": "icons/settings.svg"
				}
			]
		},
		"views": {
			"options": [
				{
					"id": "options",
					"name": "All"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "cp-tools.editOption",
					"group": "inline",
					"when": "viewItem == key"
				},
				{
					"command": "cp-tools.resetCategory",
					"group": "inline",
					"when": "viewItem == category"
				}
			],
			"view/title": [
				{
					"command": "cp-tools.resetOptions",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"parcel:build": "parcel build -d out/assets src/assets/display.html --public-url \"vscodeRoot\"",
		"parcel:watch": "parcel watch -d out/assets src/assets/display.html --public-url \"vscodeRoot\"",
		"compile": "tsc -p ./ && npm run parcel:build",
		"watch": "tsc -watch -p ./ && npm run parcel:watch",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.14.7",
		"@types/pidusage": "^2.0.1",
		"parcel-bundler": "^1.12.3",
		"sass": "^1.23.0-module.beta.1",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"vue-template-compiler": "^2.6.10"
	},
	"dependencies": {
		"@vue/component-compiler-utils": "^3.0.0",
		"pidusage": "^2.0.17",
		"vue": "^2.6.10",
		"vue-hot-reload-api": "^2.3.3"
	}
}
